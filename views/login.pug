extends layout

block head
  link(rel="stylesheet" href="css/bootstrap.min.css")
  script(type="text/javascript" src="js/jquery-2.1.4.min.js" charset="utf-8")
  script(type="text/javascript" src="js/bootstrap.min.js" charset="utf-8")
  script(type="text/javascript" src="https://d3js.org/d3.v3.js" charset="utf-8")
  title My Site
  
block content
  div.container
    h2.text-center Please login to your account
    #form.col-md-4.col-sm-8.col-lg-4.center-block(style="float:none")
      hr
      form#login(action='/login', method="post")
        .form-group
          label Username
          input.form-control(type='text', name="username")
        .form-group
          label Password
          input.form-control(type='password', name="password")
        button#login_submit.btn.btn-primary.btn-block(type='submit') Connect
        i.icon-ok.icon-white 
      hr
      button.btn.btn-success.btn-block(type='button', href='/signup' onClick='document.location.href="/signup"') Create an account